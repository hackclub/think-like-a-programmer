<style>
  .box-glow {
    filter: drop-shadow(#22d3ee 0 0 5px);
  }
  .glow {
    text-shadow: #22d3ee 0 0 5px;
  }
  @keyframes scroll {
    0% {
      left: 0;
    }
    100% {
      left: -100%;
    }
  }
  #gallery {
    animation: scroll 20s linear infinite;
  }

  .glow.transition-glow {
    transition-property: text-shadow;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  .glow.transition-glow:hover {
    text-shadow: #22d3ee 0 0 10px;
  }
</style>