          <h1 class="text-5xl font-bold glow transition-glow">FAQS</h1>
          <div class="md:grid flex flex-col md:grid-cols-3 gap-14 px-7 md:px-14">
            {
              FAQQuestions.map(query => (
                  query.q !== "" ? (
                  <FAQ
                    question={query.q}
                    answer={query.a}
                  />
